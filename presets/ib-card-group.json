{
    "key": "ib-card-group",
    "name": "Conjunt de targetes",
    "category": "bootstrap",
    "instructions": "Emprau la targeta juntament amb grup de targetes per mostrar aplicacions pràctiques\nd'una situació d'aprenentatge.\n",
    "engine": "ejs",
    "template": "<p><br></p> <div class=\"container ib-card-group\"> <div class=\"row justify-content-center\">\n  <% for(var i=1; i <= num; i++) { %>\n  <div class=\"col-auto m-1\">\n  <div class=\"card ib-card m-1\" style=\"width:<%=width%>px;\">\n    <img src=\"https://picsum.photos/300/100\" class=\"card-img-top\">\n    <div class=\"card-body\">\n      <h5 class=\"card-title\">Títol targeta <%= i %></h5>\n      <p class=\"card-text\">Text del contingut de la targeta <%= i %>.</p>\n    </div>\n  </div>\n  </div>\n  <% } %>\n</div> </div> <p><br></p>\n",
    "selectors": "div.ib-card-group",
    "unpack": ".card-body>*",
    "parameters": [
        {
            "name": "num",
            "title": "Nombre de targetes",
            "type": "numeric",
            "value": 2,
            "min": 1
        },
        {
            "name": "width",
            "title": "Amplada",
            "type": "numeric",
            "value": 300,
            "min": 100
        }
    ],
    "contextmenu": [
        {
            "predicate": "div.row.col-auto",
            "actions": "moveleft moveright insertafter | remove"
        }
    ],
    "author": "Josep Mulet <pep.mulet@gmail.com>",
    "nou": true,
    "version": "1.0.0"
}